<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <title>Statistiche Annuali</title>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 30px;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 40px;
        }

        .chart-box {
            border: 1px solid #ddd;
            padding: 15px;
        }

        .chart-box h3 {
            text-align: center;
            margin-bottom: 10px;
        }

        .full {
            grid-column: span 2;
            max-width: 600px;
            margin: auto;
        }
    </style>
</head>
<body>

<h2>Report storico</h2>

<div class="grid">

    <div class="chart-box">
        <h3>N° Club</h3>
        <canvas id="chart1"></canvas>
    </div>

    <div class="chart-box">
        <h3>N° Eventi</h3>
        <canvas id="chart2"></canvas>
    </div>

    <div class="chart-box">
        <h3>N° Partite</h3>
        <canvas id="chart3"></canvas>
    </div>

    <div class="chart-box">
        <h3>N° Giocatori</h3>
        <canvas id="chart4"></canvas>
    </div>

    <div class="chart-box">
        <h3>N° Giornate</h3>
        <canvas id="chart5"></canvas>
    </div>

</div>

<script>
    // CATEGORIE COMUNI
    const labels = [
    				#foreach( $anno in $years )
						$anno,								
					#end
					];

    // COLORI FISSI PER CATEGORIA
	const basePalette = [
	    "#4e79a7", "#59a14f", "#f28e2b", "#e15759",
	    "#76b7b2", "#edc949"
	];
	
	function generateColors(count) {
	    if (count <= basePalette.length) {
	        return basePalette.slice(0, count);
	    }

    const colors = [...basePalette];
    const extra = count - basePalette.length;

    for (let i = 0; i < extra; i++) {
        const hue = Math.round((360 / extra) * i);
        colors.push(`hsl(${hue}, 60%, 55%)`);
    }
    return colors;
}
    const categoryColors = generateColors(labels.length);

    // DATI (esempio)
    const data = [
        { id: "chart1", values: [
			            		#foreach( $anno in $years ) 
									$reportTournaments.getNumberOfClubByYear($anno),								
								#end
        						]
        },
        { id: "chart2", values: [
			            		#foreach( $anno in $years ) 
									$reportTournaments.getNumberOfEventsByYear($anno),								
								#end
        						]
        },
        { id: "chart3", values: [
			            		#foreach( $anno in $years ) 
									$reportTournaments.getNumberOfMatchesByYear($anno),								
								#end
        						]
        },
        { id: "chart4", values: [
			            		#foreach( $anno in $years ) 
									$reportTournaments.getNumberOfPlayersByYear($anno),								
								#end
        						]
        },
        { id: "chart5", values: [
			            		#foreach( $anno in $years ) 
									$reportTournaments.getNumberOfDatesByYear($anno),								
								#end
        						]
        }
    ];

    data.forEach(cfg => {
        const ctx = document.getElementById(cfg.id).getContext("2d");

        new Chart(ctx, {
            type: "bar",
            data: {
                labels: labels,
                datasets: [{
                    data: cfg.values,
                    backgroundColor: categoryColors
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false   // ⛔ niente label
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: cfg.max
                    }
                }
            }
        });
    });
</script>

</body>
</html>
